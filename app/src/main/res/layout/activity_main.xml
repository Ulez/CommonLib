<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/bt_wake_bd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="百度唤醒" />

    <TextView
        android:id="@+id/textWake"
        android:text="未启动xf唤醒"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/bt_wake_xf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="讯飞唤醒" />

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_marginBottom="8dp"
        android:text="点击语音识别" />

    <Button
        android:id="@+id/bt_asr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="百度识别语音" />

    <Button
        android:id="@+id/bt_asr2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="讯飞识别语音" />

    <EditText
        android:id="@+id/et_tts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="面向广大开发者永久免费开放语音合成技术。" />

    <Button
        android:id="@+id/bt_tts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tts百度" />

    <Button
        android:id="@+id/bt_tts2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tts讯飞" />

</LinearLayout>